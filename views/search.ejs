<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script
      src="https://kit.fontawesome.com/75b76eb5b2.js"
      crossorigin="anonymous"
    ></script>
    <title>Document</title>
  </head>
  <body class="grey-bg">
    <%- include('nav.ejs')%>

    <div class="container">
      <form class="post__nav" action="/search" method="POST">
        <input name="search" type="text" placeholder="검색어를 입력해주세요" />
        <button>
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>

      <div class="white-bg">
        <% posts.forEach(post => { %>
        <div class="list-box">
          <a href="/detail/<%= post._id %>">
            <h4><%= post.title %></h4>
          </a>
          <p><%= post.content %></p>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
