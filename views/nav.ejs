<script>
  document.querySelector('.post__add').addEventListener('click', () => {
    axios
      .get('/write')
      .then((res) => {
        // 이쪽은 단순히 get 요청을 보내는것 파일을 랜더하는것은 서버에서
        location.href = '/write';
      })
      .catch((error) => {
        const userConfirmed = confirm(
          '로그인이 필요합니다. 로그인 하시겠습니까?'
        );
        if (userConfirmed) {
          // 사용자가 확인 버튼을 눌렀을 때의 동작
          // 예를 들어, 로그인 페이지로 이동하도록 할 수 있습니다.
          location.href = '/login';
        }
      });
  });
</script>
