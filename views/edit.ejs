    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Document</title>
  </head>
  <body class="grey-bg">
    <%- include('nav.ejs')%>

    <form
      class="form-box"
      action="/edit/<%= post._id%>?_method=PUT"
